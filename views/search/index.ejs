<h2>Search Film</h2>
<form action="/search" method="post">
  <label>Search: </label>
  <input class="search" type="text" name="search">
  <br>
  <input type="radio" name="searchBy" value="id">imdb ID
  <input type="radio" name="searchBy" value="title">title
  <input type="radio" name="searchBy" value="year">year <br>
  <button class="btn-primary" type="reset">Reset</button>
  <button class="btn-primary" type="submit">Search</button>

</form>
<% if (listFilm == null) { %>
  <h3>Silahkan cari film yang di inginkan</h3>
<% } else if (listFilm.length > 0) { %>
<ul>
  <% for (let i = 0; i < listFilm.length; i++) { %>
    <main class="container-film">
      <img height="150" width="100" src="<%= listFilm[i]["poster"]%>" alt="">
      <section class="film-desc">
          <ul>
              <li class="list-film">Title : <%= listFilm[i]["title"]%></li>
              <li class="list-film">imdb ID : <%= listFilm[i]["imdbID"]%></li>
              <li class="list-film">Release Year : <%= listFilm[i]["release_year"]%></li>
              <li class="list-film">Type : <%= listFilm[i]["workType"]%></li>
          </ul>
      </section>
  </main>
  <% } %>
</ul>
<% } else if (listFilm.length == 0){ %>
  <h3>Tidak ada film yang ditemukan</h3>
<% } else { %>
  <h3>Error</h3>
<% } %>